<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.notice.dao.NoticeMapper">
	<resultMap type="noticeVO" id="noticeMap">
		<result property="noti_num" column="noti_num"/>
		<result property="user_num" column="user_num"/>
		<result property="noti_title" column="noti_title"/>
		<result property="noti_content" column="noti_content"/>
		<result property="noti_date" column="noti_date"/>
		<result property="memberVO.user_name" column="user_name"/>
	</resultMap>
	<!-- 공지사항 등록 -->
	<insert id="insertNotice" parameterType="noticeVO">
		INSERT INTO notice(
		  noti_num,
		  noti_title,
		  noti_content,
		  user_num)
		VALUES (
		  notice_seq.nextval,
		  #{noti_title},
		  #{noti_content},
		  #{user_num})
	</insert>
	
	<!-- 검색 조건 -->
	<sql id="noticeSearch">
		<where>
			<if test="keyword != null and keyword != ''">
				<if test="keyfield == 1">
					n.noti_title LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 2">
					n.noti_content LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 3">
					(n.noti_title LIKE '%' || #{keyword} || '%' OR
					n.noti_content LIKE '%' || #{keyword} || '%')
				</if>
			</if>
		</where>
	</sql>
	
	<!-- 정렬 -->
	<sql id="noticeOrder">
		<if test="order == 1">
			ORDER BY n.noti_num DESC
		</if>
		<if test="order == 2">
			ORDER BY n.noti_date DESC
		</if>
		<if test="order == null or order == ''">
			ORDER BY n.noti_num DESC
		</if>
	</sql>
	
	<!-- 공지사항 전체/검색 레코드 수 -->
	<select id="selectRowCount" resultType="int">
		SELECT COUNT(*) as cnt FROM notice
		<where>
			<if test="keyword != null and keyword != ''">
				<if test="keyfield == 1">
					noti_title LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 2">
					noti_content LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 3">
					(noti_title LIKE '%' || #{keyword} || '%' OR
					noti_content LIKE '%' || #{keyword} || '%')
				</if>
			</if>
		</where>
	</select>
	
	<!-- 공지사항 목록 조회 -->
	<select id="selectList" parameterType="map" resultMap="noticeMap">
		SELECT
		  *
		  FROM (SELECT
		  		  a.*,
		  		  rownum rnum
		  		FROM (SELECT
						n.noti_num,
						n.user_num,
						  <![CDATA[
						REPLACE(REPLACE(n.noti_title,'<','&lt;'),'>','&gt;') noti_title,
						  ]]>
						n.noti_content,
						n.noti_date,
						u.user_name
					FROM notice n
					LEFT JOIN euser_detail u ON n.user_num = u.user_num
					<include refid="noticeSearch"/>
					<include refid="noticeOrder"/>)a)
		<![CDATA[
		WHERE rnum >= #{start} AND rnum <= #{end}
		]]>
	</select>
	
	<!-- 공지사항 상세 조회 -->
	<select id="selectNotice" parameterType="long" resultMap="noticeMap">
		SELECT
			n.noti_num,
			n.user_num,
			n.noti_title,
			n.noti_content,
			n.noti_date,
			u.user_name
		FROM notice n
		LEFT JOIN euser_detail u ON n.user_num = u.user_num
		WHERE n.noti_num=#{noti_num}
	</select>
	
	<!-- 공지사항 삭제 -->
	<delete id="deleteNotice" parameterType="long">
		DELETE FROM notice 
		WHERE noti_num=#{noti_num}
	</delete>
	
	<!-- 공지사항 수정 (필요시 추가) -->
	<update id="updateNotice" parameterType="noticeVO">
		UPDATE notice SET
			noti_title=#{noti_title},
			noti_content=#{noti_content}
		WHERE noti_num=#{noti_num}
	</update>

</mapper>


































