<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.notice.dao.NoticeMapper">
	<resultMap type="noticeVO" id="noticeMap">
		<result property="memberVO.user_name" column="user_name"/>
	</resultMap>
	<!-- 공지사항 등록 -->
	<insert id="insertNotice" parameterType="noticeVO">
		INSERT INTO notice(
		  noti_num,
		  noti_title,
		  noti_content,
		  user_num)
		VALUES (
		  notice_seq.nextval,
		  #{noti_title},
		  #{noti_content},
		  #{user_num})
	</insert>
	
	<!-- 검색 조건 -->
	<sql id="noticeSearch">
		<where>
			<if test="keyword != null and keyword != ''">
				<if test="keyfield == 1">
					noti_title LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 2">
					noti_content LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 3">
					(noti_title LIKE '%' || #{keyword} || '%' OR
					noti_content LIKE '%' || #{keyword} || '%')
				</if>
			</if>
		</where>
	</sql>
	
	<!-- 정렬 -->
	<sql id="noticeOrder">
		<if test="order == 1">
			ORDER BY noti_num DESC
		</if>
		<if test="order == 2">
			ORDER BY noti_date DESC
		</if>
		<if test="order == null or order == ''">
			ORDER BY noti_num DESC
		</if>
	</sql>
	
	<!-- 공지사항 전체/검색 레코드 수 -->
	<select id="selectRowCount" parameterType="map" resultType="integer">
		SELECT
		  COUNT(*)
		FROM notice
		<include refid="noticeSearch"/>
	</select>
	
	<!-- 공지사항 목록 조회 -->
	<select id="selectList" parameterType="map" resultType="noticeVO">
		SELECT
		  *
		FROM (SELECT
		  		a.*,
		  		rownum rnum
		  	  FROM (SELECT
						noti_num,
						user_num,
						<![CDATA[
						REPLACE(REPLACE(noti_title,'<','&lt;'),'>','&gt;') noti_title,
						]]>
						noti_content,
						noti_date
					FROM notice
					<include refid="noticeSearch"/>
					<include refid="noticeOrder"/>)a)
		<![CDATA[
		WHERE rnum >= #{start} AND rnum <= #{end}
		]]>
	</select>
	
	<!-- 공지사항 상세 조회 -->
	<select id="selectNotice" parameterType="long" resultType="noticeVO">
		SELECT 
		  *
		FROM notice
		WHERE noti_num=#{noti_num}
	</select>
	
	<!-- 공지사항 삭제 -->
	<delete id="deleteNotice" parameterType="long">
		DELETE FROM notice 
		WHERE noti_num=#{noti_num}
	</delete>
	
	<!-- 공지사항 수정 (필요시 추가) -->
	<update id="updateNotice" parameterType="noticeVO">
		UPDATE notice SET
			noti_title=#{noti_title},
			noti_content=#{noti_content}
		WHERE noti_num=#{noti_num}
	</update>

</mapper>


































