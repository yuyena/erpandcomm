<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.chat.dao.ChatMemberMapper">
	
	<!-- 채팅 멤버 생성 -->
	<insert id="insertMember" parameterType="ChatMemberVO">
		INSERT INTO chat_member(
			member_num,
			room_num,
			user_num,
			role)
		VALUES(
			chat_member_seq.nextval,
			#{room_num},
			#{user_num},
			#{role})
	</insert>
	
	<!-- 생성된 멤버 번호 조회 -->
	<select id="selectLastMemberNum" resultType="long">
		SELECT chat_member_seq.currval FROM dual
	</select>
</mapper>


































